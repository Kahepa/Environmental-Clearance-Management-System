@page
@model Environmental_Clreance_MGT.Pages.REMA.Staff.assignTasktoassessorModel
@{
    Layout = "";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Registration form</title>
    <link rel="stylesheet" href="~/css/adminstyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        input{
            width:400px;
        }
    </style>
</head>
<body>
    <div class="link-an">
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;<h1>ENVIRONMENT CLEARANCE MANAGEMENT SYSTEM</h1>
    </div>
    <div class="log">
        <a href="#">
            <img class="logo" alt="Rema" src="/download.jpeg" />
        </a>
    </div>
    <div class="AA-B">
        <a class="main-nav-link" asp-page="/Rema/Applicant/ReviewerDash">Home</a>  &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/Viewrequest">View Request</a> &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/assessorreport">Assessor Report</a>&nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/login">Log Out</a>
    </div>
    <br /><br />
    <div class="page-body" style="padding:0px;margin-left:400px;  width:800px;font-size:17px;">
       <form method="POST">
           <h2>ASSIGN TASK TO ASSESSOR</h2>
           <br />
            @if (Model.message.Length > 0)
            {
                <div role="alert" style="height:30px; background-color:antiquewhite;font-size:17px; color:brown; text-align:center;  font-family:'Book Antiqua';">
                    <strong>@Model.message</strong>

                </div>
            }
            <br />
        <div style="height:400px;  text-align:center"> 
                 <input type="text"  placeholder="Location" name="location"><br /><br />
                <input type="text" placeholder="Road Number" name="roadnumber"><br /><br />
                <input type="date" placeholder="Start Date" name="Startdate"><br /><br />
                 <select class="form-select" style="margin-left:200px; width:400px;text-align:center; " name="assessors" aria-label="Default select example">
                    <option selected>Select Assessor Name</option>
                     @foreach (var item in Model.Listassessor)
                      {
                        <option value="@item.idnumber"><b>@item.fullname</b></option>
                      }
                </select>
                <br />
                 <label>Write His/Her Task:</label><br />
                 <textarea cols="80" rows="6" name="task"></textarea>
                 <div class="offset-sm-3 col-sm-3 d-grid" style="margin-left:290px;">
                  <button type="submit" class="btn btn-primary">ASSIGN</button>
                &nbsp; &nbsp;&nbsp;
            </div>
        </div>
        </form>

    </div>

    

</body>
</html>