@page
@model Environmental_Clreance_MGT.Pages.REMA.Staff.ViewWorkerModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ListOf StaffMember</title>
    <link rel="stylesheet" href="~/css/adminstyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="link-an">
        &nbsp;&nbsp; &nbsp;&nbsp;<h1>ENVIRONMENT CLREANCE MANAGEMENT SYSTEM</h1>
    </div>
    <div class="log">
        <a href="#">
            <img class="logo" alt="Rema" src="/download.jpeg" />
        </a>
    </div>
    <div class="AA-B">
        <a class="main-nav-link" asp-page="/Rema/Applicant/adminDash">Home</a>  &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/StaffRegister">Resister Worker</a> &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/ViewWorker">View Worker</a>
    </div>
    <div class="page-body" style="font-size:15px;text-align:center;  margin-top:30px; padding:0px;">
    <h3>LIST OF WORKER </h3>
    <br />
    <form method="POST">
        <div style="height:400px;overflow:scroll; text-align:center"> 
        <table class="table" style=" margin-left:250px;  width:70%;">
            <thead>
                <tr>
                    <th>Worker_ID</th>
                    <th>FullName</th>
                    <th>Worker_Email</th>
                    <th>Worker_Phone</th>
                    <th>Role</th>
                    <th>Level Of Education</th>
                    <th>Action</th>
                </tr>


            </thead>
            <tbody>
                @foreach (var item in Model.listinfo)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.fullname</td>
                        <td>@item.email</td>
                        <td>@item.phone</td>
                        <td>@item.Role</td>
                        <td>@item.level_of_education</td>
                        <td>
                            <a class='btn btn-primary btn-sm' href="/REMA/Staff/Updatestaff?id=@item.id">Edit</a>
                            <a class='btn btn-danger btn-sm' href="/Patients/Delete?id=@item.id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        </div>

        </form>

    </div>
    <br />
    <br />
    <br />

</body>
</html>