@page
@model Environmental_Clreance_MGT.Pages.REMA.Staff.ViewrequestModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Registration form</title>
    <link rel="stylesheet" href="~/css/adminstyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="link-an">
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;<h1>ENVIRONMENT CLEARANCE MANAGEMENT SYSTEM</h1>
    </div>
    <div class="log">
        <a href="#">
            <img class="logo" alt="Rema" src="/download.jpeg" />
        </a>
    </div>
    <div class="AA-B">
        <a class="main-nav-link" asp-page="/Rema/Applicant/ReviewerDash">Home</a>  &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/Viewrequest">View Request</a> &nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/assessorreport">Assessor Report</a>&nbsp;||&nbsp;
        <a class="main-nav-link" asp-page="/Rema/Staff/login">Log Out</a>
    </div>
    <br /><br />
    <div class="page-body" style="padding:0px; font-size:17px;">
       <form method="POST">
           <h2>LIST OF ALL NEW REQUEST</h2>
           <BR><br />
        <div style="height:400px; text-align:center"> 
        <table class="table" style="width:75%;  margin-left:200px;">
            <thead>
                <tr border:solid 1px;>
                    <th>ApplicantID</th>
                    <th>ApplicantEmail</th>
                    <th style="width:500px;">Request</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>


            </thead>
            <tbody>
                @foreach (var item in Model.Listrequestinfo)
                {
                    <tr>
                        <td>@item.applicantid</td>
                                <td style="color:blue;"><a href="#" style="color:blue; text-decoration:none;">@item.applicantemail</a></td>
                        <td style="width:500px;">@item.request</td>
                        <td style="color:blue;">@item.status</td>
                        <td>
                                    <a class='btn btn-primary btn-sm' href="/REMA/Staff/assignTasktoassessor?applicantid=@item.applicantid">Assigin To Assessor</a>
                            <a class='btn btn-primary btn-sm' href="/Patients/Delete?applicantid=@item.applicantid">Response</a>
                        </td>

                    </tr>
                    

                }
            </tbody>
        </table>
        </div>
        </form>

    </div>


</body>
</html>