    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Registration form</title>
    <link rel="stylesheet" href="~/css/adminstyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        input{
            width:400px;
        }
    </style>
</head>
<body>
    <div class="link-an" style="font-family:'Bookman Old Style'">
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;<h1>ENVIRONMENT CLEARANCE MANAGEMENT SYSTEM</h1>
    </div>
    <div class="log">
        <a href="#">
            <img class="logo" alt="Rema" src="/download.jpeg" />
        </a>
    </div>
    
    <br />
    <br /><br />
    <form method="POST">
    <div class="page-body" style="font-size:17px; width:700px; border-radius:10px; margin-left:30px; border:solid 1px; padding:0px;">
        <h2> REQUEST REGISTRATION FORM </h2>
        <br />
            <input type="text" placeholder="Address" name="address"><br /><br />
            <input type="text" placeholder="UPI Number" name="upinumber"><br /><br />
            <input type="date" placeholder="Start Date" name="Startdate"><br /><br />
        <label>Description:</label><br />
        <textarea cols="80" rows="6" name="request"></textarea>
        <div class="offset-sm-3 col-sm-3 d-grid" style=" margin-top:-50px; margin-left:270px;">
        <button type="submit" class="btn btn-primary mt-5" style="width:150px;">Submit</button>
               
    </div>
            @if (Model.message.Length > 0)
            {
                <div role="alert" style="height:30px; background-color:antiquewhite;font-size:17px; color:brown; text-align:center;  font-family:'Book Antiqua';">
                    <strong>@Model.message</strong>

                </div>
            }
        
    </div>


    <div style="width:600px; height:400px; border:solid 1px; border-radius:10px; margin-left:850px; margin-top:-450px;">

    </div>
    </form>

</body>
</html>